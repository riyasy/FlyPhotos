<Window
    x:Class="FlyPhotosV1.Views.TestPerformance"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TestPerformance"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="BtnUiThreadTest"
            Width="128"
            Margin="95,70,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnUIThreadTest_Click"
            Content="Load Images" />
        <Slider
            x:Name="SliderPhotoSelect"
            Width="277"
            Height="25"
            Margin="465,80,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            IsSnapToTickEnabled="True"
            TickFrequency="1"
            ValueChanged="sliderPhotoSelect_ValueChanged" />
        <Image
            x:Name="PhotoDisplayy"
            Width="Auto"
            Height="Auto"
            Margin="0,200,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top" />
        <Button
            Margin="228,70,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click"
            Content="Stop"
            RenderTransformOrigin="0.909,0.227" />

    </Grid>
</Window>